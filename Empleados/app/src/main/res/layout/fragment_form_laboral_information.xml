<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FormLaboralInformation">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/field_nomina"
                    android:fontFamily="@string/font_family_black"
                    />
                <EditText
                    android:id="@+id/nomina"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@string/font_family_light"
                    android:maxWidth="200dp"
                    />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/field_puesto"
                    android:fontFamily="@string/font_family_black"
                    />
                <EditText
                    android:id="@+id/puesto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@string/font_family_light"
                    />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/field_rfc"
                    android:fontFamily="@string/font_family_black"
                    />
                <EditText
                    android:id="@+id/rfc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@string/font_family_light"
                    />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/field_curp"
                    android:fontFamily="@string/font_family_black"
                    />
                <EditText
                    android:id="@+id/curp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@string/font_family_light"
                    />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/field_nss"
                    android:fontFamily="@string/font_family_black"
                    />
                <EditText
                    android:id="@+id/nss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@string/font_family_light"
                    />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/field_escolaridad"
                    android:fontFamily="@string/font_family_black"
                    />
                <EditText
                    android:id="@+id/escolaridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@string/font_family_light"
                    />
            </TableRow>
        </TableLayout>
    </ScrollView>
</FrameLayout>